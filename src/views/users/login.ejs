<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs') %>

    <body>

        <%- include('../partials/header.ejs') %>

            <main class="form-main">

                <form action="/users/login" method="POST">

                    <div class="formulario">

                        <h2 class="titulo">Mi sesión</h2>

                        <div class="input-datos">
                            <label for="email">E-mail</label><br>
                            <!--como propiedad de input podemos agregar un required (por defecto saldra un aviso) o mejor podemos hacer un span-->
                            <input class="input-estilo" type="email" name="email" id="email">
                            <% if (locals.errors && errors.email) { %>
                                <span class="error-msj"><%= errors.email.msg %></span>
                            <% } %>
                        </div>

                        <div class="input-datos">
                            <label for="pass">Contraseña</label><br>
                            <input class="input-estilo" type="password" name="pass" id="pass">
                            <% if (locals.errors && errors.pass) { %>
                                <span class="error-msj"><%= errors.pass.msg %></span>
                            <% } %>
                        </div>

                        <div class="check">
                            <input type="checkbox" name="remember" id="check"><label for="check">Recordarme</label>
                            <!-- dentro del input puedo colocar checked, y ya me lo marcaria  -->
                        </div>
                        <% if (locals.errors && errors.custom) { %>
                            <span class="error-msj"><%= errors.custom.msg %></span>
                        <% } %>
                        <div class="button">
                            <button type="submit">INICIAR SESIÓN</button><br>
                            <!-- onclick="alert('Estamos trabajando en ello')" -->
                        </div>

                        <span><a href="register">¿No tenés cuenta? Registrarme</a></span>
                    </div>

                </form>
            </main>

            <%- include('../partials/footer.ejs') %>

            <%- include('../partials/script.ejs') %> 

            <script src="/js/loginValidation.js" defer></script> 

    </body>

</html>